@model inventario.Entities.Produto

@{
    ViewData["Title"] = "Deletar Item";
}

<h2>Deseja realmente deletar esse item ?</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Nome)
            <div asp-validation-summary="All" class="text-danger"></div>
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Nome)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Descricao)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Descricao)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Quantidade)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Quantidade)
        </dt>
    </dl>
</div>

<form asp-action="Delete">
    <input type="submit" value="Deletar" class="btn btn-danger"/>
</form>